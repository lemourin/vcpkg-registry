vcpkg_from_github(
  OUT_SOURCE_PATH SOURCE_PATH
  REPO lemourin/coro-http
  REF fab56ee4e37cb52d2fbcf2d0448d3b08f7b7670a
  SHA512 ce1db2ae066e573037292cdd25080db2fe7c397d990631f571f0132d885fc7a2f987a0074bb23548f55332f35c612afb4dac97c523fc3f704c204fe753562484
